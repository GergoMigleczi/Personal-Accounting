@page "{name}"
@model PersonalAccounting.Pages.AddTransactionsModel
@{
    ViewData["Title"] = "Add Transactions";
}
@if (Model.Name == "transactions")
{

    <div class="banner banner-small long-text">
        <h1 style="text-align: center">Add transactions</h1>
    </div>

    <div class="flex index-flex transaction-flex">
        <div class="block width-70">
            <form method="post">
                <div class="center">
                    <div class="flex">
                        <div class="form-1 form-text-right">
                            <label>Date</label>
                        </div>
                        <div class="form-1">
                            <input type="text" asp-for="Date" placeholder="@DateTime.Today.ToString("dd/MM/yyyy")" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="flex">
                        <div class="form-1 form-text-right">
                            <label>Amount</label>
                        </div>
                        <div class="form-1">
                            <input type="number" asp-for="Amount" placeholder="0.0" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="flex">
                        <div class="form-1 form-text-right">
                            <label>Currency</label>
                        </div>
                        <div class="form-1">
                            <input type="text" asp-for="Currency" placeholder="gbp, usd, eur, huf" />
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="flex">
                        <div class="form-1 form-text-right">
                            <label>Description</label>
                        </div>
                        <div class="form-1">
                            <textarea asp-for="Description" rows="1" maxlength="50"></textarea>
                        </div>
                    </div>
                    <div class="flex index-flex">
                        <div>
                            <button class="btn btn-main" type="submit" name="submit" asp-route-name="transactions">Add</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="block width-30">
            <div class="flex current-balance-flex ">
                <div class="current-balance">
                    Pound: £ @Model.GbpTotal
                </div>
                <div class="current-balance">
                    Forint: Ft @Model.HufTotal
                </div>
                <div class="current-balance">
                    Euro: € @Model.EurTotal
                </div>
                <div class="current-balance">
                    Us Dollar: $ @Model.UsdTotal
                </div>
            </div>
        </div>
    </div>

    <div class="flex index-flex button-wrap">
        <div class="block button-block">
            <a asp-page="/AddTransactions" asp-route-name="stocks" class="btn">
                <div class="btn-main div-padding btn-big">Add Stocks</div>
            </a>
        </div>
        <div class="block button-block">
            <a asp-page="/Index" class="btn">
                <div class="btn-main div-padding btn-big">Back To Balance</div>
            </a>
        </div>
    </div>

}
//----------------STOCKS---------------STOCKS-----------------------STOCKS-------------------STOCKS--------------
else if (Model.Name == "stocks")
{


    <div class="banner banner-small">
        <h1 style="text-align: center">Add Stocks</h1>
    </div>

    <div class="block table-block">
        <form method="post">
            <div class="flex">
                <div class="form-1 form-text-right ">
                    <label>Date</label>
                </div>
                <div class="form-1 ">
                    <input type="text" asp-for="DateStock" placeholder="@DateTime.Today.ToString("dd/MM/yyyy")" />
                    <span asp-validation-for="DateStock" class="text-danger"></span>
                </div>
            </div>
            <div class="flex ">
                <div class="form-1 form-text-right ">
                    <label>Name of stock</label>
                </div>
                <div class="form-1 ">
                    <input type="text" asp-for="NameStock" placeholder="NTFLX" />
                    <span asp-validation-for="NameStock" class="text-danger"></span>
                </div>
            </div>
            <div class="flex ">
                <div class="form-1 form-text-right " >
                    <label>Amount</label>
                </div>
                <div class="form-1 " >
                    <input type="number" asp-for="AmountStock" placeholder="0.0" />
                    <span asp-validation-for="AmountStock" class="text-danger"></span>
                </div>
            </div>
            <div class="flex">
                <div class="form-1 form-text-right ">
                    <label>Buy or Sell</label>
                </div>
                <div class="form-1 ">
                    <input type="text" asp-for="BuySellStock" placeholder="buy/sell" />
                    <span asp-validation-for="BuySellStock" class="text-danger"></span>
                </div>
            </div>
            <div class="flex">
                <div class="form-1 form-text-right ">
                    <label>Description</label>
                </div>
                <div class="form-1 ">
                    <textarea asp-for="DescriptionStock" rows="1" maxlength="50"></textarea>
                </div>
            </div>
            <div class="flex current-balance-flex">
                <div >
                    <button class="btn btn-main" type="submit" name="submit" asp-route-name="stocks">Add</button>
                </div>
            </div>
        </form>
    </div>
    <div class="flex index-flex button-wrap">
        <div class="block button-block">
            <a asp-page="/AddTransactions" asp-route-name="transactions" class="btn">
                <div class="btn-main div-padding btn-big">Add Transactions</div>
            </a>
        </div>
        <div class="block button-block">
            <a asp-page="/Index" style="color: black" class="btn">
                <div class="btn-main div-padding btn-big">Back To Balance</div>
            </a>
        </div>
    </div>
        }
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
