@page "{id}"
@model PersonalAccounting.Pages.EditStocksModel
@{
    ViewData["Title"] = "Edit Stocks";
}

<div class="banner banner-small">
    <h1 style="text-align: center">Edit Stocks</h1>
</div>
<div class="block table-block">
    <form method="post">
        <div class="flex">
            <div class="form-1 form-text-right ">
                <label>Date</label>
            </div>
            <div class="form-1 ">
                <input type="text" asp-for="CurrentS.Date" placeholder="@Model.CurrentS.Date" />
                <span asp-validation-for="DateStock" class="text-danger"></span>
            </div>
        </div>
        <div class="flex ">
            <div class="form-1 form-text-right ">
                <label>Name of stock</label>
            </div>
            <div class="form-1 ">
                <input type="text" asp-for="CurrentS.StockName" placeholder="@Model.CurrentS.StockName" />
                <span asp-validation-for="NameStock" class="text-danger"></span>
            </div>
        </div>
        <div class="flex ">
            <div class="form-1 form-text-right ">
                <label>Amount</label>
            </div>
            <div class="form-1 ">
                <input type="number" asp-for="AmountStock" placeholder="@Model.CurrentSAmount" />
                <span asp-validation-for="AmountStock" class="text-danger"></span>
            </div>
        </div>
        <div class="flex">
            <div class="form-1 form-text-right ">
                <label>Buy or Sell</label>
            </div>
            <div class="form-1 ">
                <input type="text" asp-for="BuySellStock" placeholder="@Model.BuySell" />
                <span asp-validation-for="BuySellStock" class="text-danger"></span>
            </div>
        </div>
        <div class="flex">
            <div class="form-1 form-text-right ">
                <label>Description</label>
            </div>
            <div class="form-1 ">
                <textarea asp-for="CurrentS.Description" rows="1" maxlength="50" placeholder="@Model.CurrentS.Description"></textarea>
            </div>
        </div>
        <div class="flex current-balance-flex">
            <div>
                <button class="btn btn-main" type="submit" name="submit">Save</button>
            </div>
        </div>
    </form>
</div>
<div class="flex index-flex button-wrap">
    <div class="block button-block">
        <a asp-page="/Stocks" asp-route-name="transactions" class="btn">
            <div class="btn-main div-padding btn-big">View Stocks</div>
        </a>
    </div>
    <div class="block button-block">
        <a asp-page="/Index" style="color: black" class="btn">
            <div class="btn-main div-padding btn-big">Back To Balance</div>
        </a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

